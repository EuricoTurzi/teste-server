# ========================================
# CONFIGURAÇÕES DO SERVIDOR TCP GL33CG
# ========================================

# Configurações de Rede
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Configurações do Protocolo @Track
ENABLE_SACK=true
SACK_MODE=1
HEARTBEAT_INTERVAL=60
CONNECTION_LIFE=30
MAX_CONNECTIONS=1000

# Configurações de Log
ENABLE_LOGGING=true
LOG_LEVEL=info

# Ambiente
NODE_ENV=development

# ========================================
# EXPLICAÇÃO DAS CONFIGURAÇÕES
# ========================================
#
# SERVER_PORT: Porta TCP que o servidor irá escutar (padrão: 8080)
# SERVER_HOST: IP do servidor (0.0.0.0 = todas as interfaces)
#
# ENABLE_SACK: Se deve enviar acknowledgment para os dispositivos
# SACK_MODE: 
#   0 = Não responde com SACK
#   1 = Responde com SACK e verifica número serial
#   2 = Responde com SACK sem verificar número serial
#
# HEARTBEAT_INTERVAL: Intervalo esperado de heartbeat em minutos
# CONNECTION_LIFE: Tempo limite da conexão em segundos
# MAX_CONNECTIONS: Máximo de conexões simultâneas
#
# LOG_LEVEL: debug, info, warn, error
# NODE_ENV: development, production